{
  "name": "@hollow-gear/core",
  "version": "1.0.0",
  "description": "Core character models and game mechanics for Hollow Gear TTRPG",
  "type": "module",
  "main": "./src/model/index.ts",
  "exports": {
    ".": {
      "import": "./src/model/index.ts",
      "types": "./src/model/index.ts"
    },
    "./model": {
      "import": "./src/model/index.ts",
      "types": "./src/model/index.ts"
    },
    "./model/*": {
      "import": "./src/model/*.ts",
      "types": "./src/model/*.ts"
    }
  },
  "files": [
    "src/**/*.ts",
    "README.md"
  ],
  "keywords": [
    "ttrpg",
    "hollow-gear",
    "character-models",
    "typescript",
    "d20"
  ],
  "author": "Hollow Gear Development Team",
  "license": "MIT",
  "scripts": {
    "build": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5",
    "prettier": "^3.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
